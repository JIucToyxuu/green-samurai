<div class="in_content right_page container-fluid container-sm-height margin">
	<div class="row row-sm-height">
		<div class="col-sm-8 col-sm-height col-top">
			<section class="main_content center">
				<h2>Изменение пароля</h2>

				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= devise_error_messages! %>

					<div class="field">
						<%= f.email_field :email, autofocus: true, :class => 'form-control text-center', :placeholder => 'введите email' %>
					</div>

					<div class="actions">
					<%= f.submit "Отослать инструкции на указанную почту", :class => 'btn btn-default modal_sbm' %>
					</div>
				<% end %>

			</section>
		</div>
	</div>
</div>