<div class="in_content right_page container-fluid container-sm-height margin">
	<div class="row row-sm-height">
		<div class="col-sm-height col-top">
			<section class="main_content center">
				<h2> Изменение пароля </h2>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
					<%= devise_error_messages! %>

					<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
						<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
					<% end %>

					<div class="field margin">
						<label class='margin'>Пароль (оставте поле пустым, если не хотите изменить его)</label>
						<%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
					</div>

					<div class="field">
						<label class='margin'>Подтвердите пароль</label>
						<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
					</div>

					<div class="field">
						<label class='margin'>Введите текущий пароль, для подтверждения изменений</label>
						<%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
					</div>

					<div class="actions">
						<%= f.submit "Изменить", :class => 'btn btn-default modal_sbm' %>
					</div>
				<% end %>
			</section>
		</div>
	</div>
</div>