<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="myModalLabel">Авторизация</h4>
				<label class='right'>
						<%= link_to 'Забыли пароль?', new_user_password_path %>
				</label>
			</div>
			<div class="modal-body container-fluid">
				<div class="row">
					<div class="col-sm-8">
						<div class="form-group">
							<%= f.label :email %><br />
							<%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Введите email' %>
						</div>
						<div class="form-group">
							<%= f.label :password %><br />
							<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Пароль' %>
						</div>
						<div class="checkbox remember_check">
							<label>
								<% if devise_mapping.rememberable? -%>
									<%= f.check_box :remember_me %>
									<%= f.label :remember_me, 'Запомнить меня' %>
								<% end -%>
							</label>
							
						</div>
						<div class="actions">
							<%= f.submit 'Войти', :class => 'btn btn-default modal_sbm' %>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="modal_info">
							<h4>Добро пожаловать!</h4>
							<p>регистрация дает доступ к полной информации по курсам, размещенным на платформе </p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
